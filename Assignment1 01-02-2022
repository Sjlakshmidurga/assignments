#include<stdio.h>
void addmatrix(int a[2][2],int b[2][2]);
void submatrix(int a[2][2],int b[2][2]);
int main()
{
    int a[2][2];
    int b[2][2];
    int i,j;
    printf("Enter a matrix:");
    for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
            scanf("%d",&a[i][j]);
        }
    }
    printf("Enter b matrix:");
    for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
            scanf("%d",&b[i][j]);
        }
    }
    addmatrix(a,b);
    submatrix(a,b);
}
void addmatrix(int a[2][2],int b[2][2])
{
    int c[2][2];
    int i,j;
    printf("Addition of two matrices:\n");
    for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
            c[i][j]=a[i][j]+b[i][j];
            printf(" %d\t ",c[i][j]);
        }
    }
    printf("\n");
}
void submatrix(int a[2][2],int b[2][2])
{
    int c[2][2];
    int i,j;
    printf("subtraction of two matrices:\n");
    for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
            c[i][j]=a[i][j]-b[i][j];
            printf("%d\t",c[i][j]);
        }
    }
    printf("\n");
}
